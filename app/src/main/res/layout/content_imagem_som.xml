<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_imagem_som"
    tools:context="br.com.command.command.ImagemSomActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/tableLayoutImagemSom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro System Sala de Estar"
                android:id="@+id/MicroSystemDaSalaDeEstar"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/tgbMicroSystemSalaEstar"
                android:layout_column="1"
                android:textOn="Ligado"
                android:textOff="Desligado" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro System Suite"
                android:id="@+id/MicroSystemDaSuite"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/tgbMicroSystemSuite"
                android:layout_column="1"
                android:textOff="Desligado"
                android:textOn="Ligado" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro System Piscina"
                android:id="@+id/txtMicroSystemDaPiscina"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/tgbMicroSystemPiscina"
                android:layout_column="1"
                android:textOn="Ligado"
                android:textOff="Desligado" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro System Cozinha"
                android:id="@+id/MicroSystemDaCozinha"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/tgbMicroSystemCozinha"
                android:layout_column="1"
                android:textOff="Desligado"
                android:textOn="Ligado" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Televisor Sala de Estar"
                android:id="@+id/txtTelevisorDaSalaDeEstar" />

            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/tgbTelevisorDaSalaDeEstar"
                android:textOff="Desligado"
                android:textOn="Ligado" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
